<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this article from being saved:</h2>

    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user do |form| %>
  <%= form.label :username, "Username: "  %>
  <%= form.text_field :username, :placeholder => "test", :required => true  %>
  <%= form.label :email, "Email: "  %>
  <%= form.email_field :email, :placeholder => "example@example.com", :required => true  %>
  <%= form.label :password, "Password: "  %>
  <%= form.password_field :password, :required => true %>
  <%= form.submit "Submit" %>
<% end %>